<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="itemIconTint">@color/gray</item>
        <item name="itemTextColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="ToggleButtonStyle"  parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/border_gray</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="OutlinedBlueButtonStyle"  parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/light_blue</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

</resources>